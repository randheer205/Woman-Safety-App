<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    tools:context=".MainActivity4">

    <Button
        android:id="@+id/bt_location"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="217dp"
        android:background="@drawable/rect_round2"
        android:backgroundTint="#C32962FF"
        android:text="@string/get_location1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="416dp"
        android:layout_height="59dp"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="59dp"
        android:layout_marginTop="33dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view5">

        <TextView
            android:id="@+id/text_view3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view4"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view5"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="123dp"
        android:layout_height="51dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="216dp"
        android:layout_weight="1"
        android:background="@drawable/rect_round3"
        android:fontFamily="@font/aldrich"
        android:onClick="sendLocation"
        android:text="@string/sendlocation"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#D50000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/mclaren"
        android:text="Your Current Location:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        style="@android:style/Widget.Material.Light.TextView"
        android:layout_width="204dp"
        android:layout_height="39dp"
        android:layout_marginBottom="152dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:gravity="center"
        android:text="PLEASE TURN ON LOACTION"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>